{
	"compilerOptions": {
		"module": "commonjs",
		"declaration": true,
		"noImplicitAny": false,
		"removeComments": true,
		"noLib": false,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"target": "es6",
		"sourceMap": true,
		"lib": [
			"es6"
		],
		"outDir": "./lib",
		"baseUrl": "src",
		"paths": {
			"~/*": [
				"./*"
			]
		},
		"plugins": [
			{
				"transform": "typescript-transform-paths"
			},
			{
				"transform": "typescript-transform-paths",
				"afterDeclarations": true
			}
		]
	},
	"include": [
		"./src"
	],
	"files": [
		"global.d.ts"
	],
	"exclude": [
		"node_modules",
		"**/*.spec.ts"
	],
	"plugins": [
		{
			"transform": "typescript-transform-paths"
		},
		{
			"transform": "typescript-transform-paths",
			"afterDeclarations": true
		}
	]
}